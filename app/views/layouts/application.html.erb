<!DOCTYPE html>
<html>
  <head>
    <title>SocialMatchingSystem-だんだんマッチング-</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag params[:controller] %>

    <%= javascript_include_tag "jquery.sheepItPlugin-1.0.0" %>

    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
    <%= javascript_include_tag "jquery.meio.mask" %>
    <%= javascript_include_tag "ajaxzip3-source" %>

    <%= jqgrid_javascripts %>
    <%= jqgrid_stylesheets %>

    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="main_container">
      <div class="header">
        <div class="top_header">
          <div class="left_header">
            <%= render "shared/left_header" %>
          </div> <!-- end class="left_header" -->

          <div class="right_header">
            <%= render "shared/right_header" %>
          </div> <!-- end class="right_header" -->
        </div>

        <div class="logo">
          <a href="#">- <%= GlobalSetting[:name] %> -</a>
        </div> <!-- end class="logo" -->
      </div> <!-- end class="header" -->

      <div class="main_content">
        <%= yield %>
        <div class="clear"></div>
      </div> <!-- end class="main_content" -->

      <div class="footer">
        <div class="left_footer">
          Social Matching System | Powered by <a href="http://eastback.co.jp">EastBack</a>
        </div> <!-- end class="footer" -->

        <div class="right_footer">
          <a href="http://eastback.co.jp"></a>
        </div>
      </div>
    </div>
  </body>
</html>
