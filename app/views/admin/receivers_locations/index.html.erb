<div class="center_content">

  <%= render "admin/sidemenu" %>

  <div class="right_content">
    <%=raw jqgrid("位置情報一覧", "ReceiversLocations", "/admin/receivers_locations",
      [
        { :name => "id", :label => "id", :index => 'id', :width => "70", :hidden => true },
