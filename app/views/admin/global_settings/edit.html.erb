<div class="block">
    <h2><%= @global_setting.name %>の設定編集</h2>
    <%= form_for([:admin, @global_setting]) do |f| %>
      <div>
        <%= f.label :name, "タイトル："  %>
        <%= f.text_field :name %>
      </div>
      <div>
        <%= f.label :matching_range, "基準マッチング範囲："  %>
        <%= f.text_field :matching_range %> km
      </div>
      <div>
        <%= f.label :maximum_range, "最大マッチング範囲："  %>
        <%= f.text_field :maximum_range %> km
      </div>
      <div>
        <%= f.label :matching_step, "再マッチング時の拡大範囲："  %>
        <%= f.text_field :matching_step %> km
      </div>
      <div>
        <%= f.label :matching_interval, "再マッチングする時間の間隔"  %>
        <%= f.text_field :matching_interval %> 秒
      </div>
      <%= f.submit 'Update', :class => "button", :confirm => "更新します。よろしいですか？" %>
    <% end %>
</div>