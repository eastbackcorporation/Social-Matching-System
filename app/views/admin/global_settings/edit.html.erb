<div class="center_content">

  <div class="left_content">

    <div class="sidebarmenu">

      <a class="yellow_button" href="<%= admin_users_url %>">ユーザー管理</a>

      <a class="green_button" href="<%= admin_massages_url %>">マッチング管理</a>

      <a class="blue_button" href="<%= edit_admin_global_setting_url(1) %>">共通設定管理</a>

    </div>

  </div>
  <div class="right_content">
      <h2><%= @global_setting.name %>の設定編集</h2>
      <%= form_for([:admin, @global_setting]) do |f| %>
        <%= f.submit '更新', :class => "button", :confirm => "更新します。よろしいですか？" %>

        <div>
          <%= f.label :name, "システム名："  %>
          <%= f.text_field :name %>
        </div>
        <hr>
        <div>
          <%= f.label :matching_number_limit, "同時最大マッチング人数："  %>
          <%= f.text_field :matching_number_limit %>
        </div>
        <div>
          <%= f.label :validated_time_interval, "位置情報を有効とする時間(ex現在から??分前までに更新された位置情報は有効)："  %>
          <%= f.text_field :validated_time_interval %>
        </div>
        <div>
          <%= f.label :matching_range, "基準マッチング範囲：km"  %>
          <%= f.text_field :matching_range %>
        </div>
        <div>
          <%= f.label :maximum_range, "最大マッチング範囲：km"  %>
          <%= f.text_field :maximum_range %>
        </div>
        <div>
          <%= f.label :matching_step, "再マッチング時の拡大範囲：km"  %>
          <%= f.text_field :matching_step %>
        </div>
        <div>
          <%= f.label :matching_interval, "再マッチングする時間の間隔 :秒"  %>
          <%= f.text_field :matching_interval %>
        </div>
        <hr>
        <div>
          <%= f.label :mail_title_template,"依頼メールのタイトル"%>
          <%= f.text_field :mail_title_template %>
        </div>
        <br>
        <div>
          <%= f.label :mail_template,"依頼メールの文章"%>
          <%= f.text_area :mail_template ,:size => "40x10"%>
        </div>
        <% end %>
  </div>
</div>
